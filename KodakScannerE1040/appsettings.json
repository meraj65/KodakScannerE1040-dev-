{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "QueryToGetScannerStatus": "SELECT * FROM Win32_PnPEntity WHERE Description LIKE '%Fax%' OR Description LIKE '%Scanner%'",

    //File Format
    "FormatType": "{B96B3CB1-0728-11D3-9D7B-0000F81EF32E}", // Tiff Format
    //"FormatType": "{B96B3CAB-0728-11D3-9D7B-0000F81EF32E}", // Bitmap Format
    //"FormatType": "{B96B3CAF-0728-11D3-9D7B-0000F81EF32E}", // PNG Format
    //"FormatType": "{B96B3CAE-0728-11D3-9D7B-0000F81EF32E}", // JPEG Format
    //"FormatType": "{B96B3CB0-0728-11D3-9D7B-0000F81EF32E}" // Giff Format


    //File Format
    "OutPutFormat": "image/tiff", //Tiff Output
    //"OutPutFormat": "image/jpeg", //Jpej Output

    //Output Color Mode
    "ColorMode": 1, // Color image
    //"ColorMode": 2, // Gray 
    //"ColorMode": 3 ,// B/W

    //DPI Resolution
    "Dpi": 200,

    //Bits Per  Pixel
    "Pixel": 8,

    //Bits Per  Pixel
    "FileName": "ScannedFile.tiff"

}
